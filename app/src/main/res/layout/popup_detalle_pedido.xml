<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:layout_gravity="center"
    android:background="@color/fondo"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="DETALLE PEDIDO"
            android:textAlignment="center"
            android:textSize="30sp" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/fondo"
            android:scrollbars="none">


            <TableLayout
                android:id="@+id/tableLayout20"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:isScrollContainer="true"
                android:padding="10dip"
                android:stretchColumns="*">

                <TableRow
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView

                            android:id="@+id/simpleTex11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:padding="18dip"
                            android:text="PRODUCTO"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView

                            android:id="@+id/simpleTex12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:padding="18dip"
                            android:textAlignment="center"

                            android:textColor="#000"
                            android:textSize="18dp" />
                    </LinearLayout>

                </TableRow>


                <TableRow
                    android:id="@+id/t6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView

                            android:id="@+id/simpleTex61"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:padding="18dip"
                            android:text="PRECIO ($)"
                            android:textAlignment="center"
                            android:textColor="#000"

                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <EditText

                            android:id="@+id/simpleTex62"
                            android:layout_width="126dp"
                            android:layout_height="match_parent"

                            android:layout_marginLeft="20dp"
                            android:padding="18dip"
                            android:inputType="phone"
                            android:digits="1234567890."

                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="14dp" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:id="@+id/t4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView

                            android:id="@+id/simpleTex41"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:padding="18dip"
                            android:text="DESCUENTO PRODUCTO ($)"
                            android:textAlignment="center"
                            android:textColor="#000"

                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <EditText

                            android:id="@+id/simpleTex42"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:digits="1234567890."
                            android:inputType="phone"
                            android:padding="18dip"
                            android:text="0.0"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="20dp" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView

                            android:id="@+id/simpleTex21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:padding="18dip"
                            android:text="CANTIDAD"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <EditText

                            android:id="@+id/simpleTex22"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:digits="1234567890."
                            android:inputType="phone"
                            android:padding="18dip"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="20dp" />
                    </LinearLayout>

                </TableRow>





                <TableRow
                    android:id="@+id/t5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView

                            android:id="@+id/simpleTex51"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:padding="18dip"
                            android:text="VALOR ($)"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView

                            android:id="@+id/simpleTex52"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="18dip"
                            android:textAlignment="center"

                            android:textColor="#000"
                            android:textSize="20dp" />
                    </LinearLayout>

                </TableRow>





            </TableLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPopupCancelarPed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:text="CANCELAR" />

        <Button
            android:id="@+id/btnPopupAceptarPed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:text="ACEPTAR" />
    </LinearLayout>
</LinearLayout>