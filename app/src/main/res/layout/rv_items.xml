<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="40dp"
    android:background="@color/colorAccent"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="10">

        <ImageView
            android:id="@+id/rv_item_img"
            android:layout_width="0dp"
            android:layout_height="128dp"
            android:layout_weight="4"
            android:scaleType="centerCrop"
            android:src="@drawable/chaat" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/rv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karachi Chaat"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rv_item_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karachi Savour"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/rv_item_price"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="@drawable/capsule"
            android:gravity="center"
            android:text="$4"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/botonAumenta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="bottom|right" />
</android.support.v7.widget.CardView>