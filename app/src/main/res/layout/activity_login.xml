<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="0dp">

            <ImageView
                android:id="@+id/logoLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/toast_frame"
                android:foregroundGravity="center"
                android:src="@drawable/spirit" />

            <EditText
                android:id="@+id/etLoginUserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logoLogin"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/icon_username"
                android:drawablePadding="15dp"
                android:hint="Usuario"
                android:inputType="textEmailAddress"
                android:paddingLeft="30dp"
                android:paddingBottom="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etLoginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etLoginUserEmail"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/icon_password"
                android:drawablePadding="15dp"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                android:paddingLeft="30dp"
                android:paddingBottom="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etLoginEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etLoginPassword"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="5dp"
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="15dp"
            android:hint="Empresa"
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:paddingBottom="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="18sp"/>


            <Button
                android:id="@+id/btnLoginSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etLoginEmpresa"
                android:layout_marginTop="20dp"
                android:background="@android:color/holo_blue_dark"
                android:onClick="botonOnClickLogin"
                android:text="Ingresar"
                android:textColor="#ffffff"
                android:textSize="16dp" />


        </RelativeLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>